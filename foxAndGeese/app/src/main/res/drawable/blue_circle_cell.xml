<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background rectangle -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- White background for the cell -->
        </shape>
    </item>
    <!-- Outer lighter red circle -->
    <item android:gravity="center">
        <shape android:shape="oval">
            <solid android:color="#154360"/> <!-- Lighter shade of red -->
            <size android:width="48dp" android:height="48dp"/>
        </shape>
    </item>
    <!-- Inner darker red circle -->
    <item android:gravity="center">
        <shape android:shape="oval">
            <solid android:color="#85C1E9" /> <!-- Darker shade of red -->
            <size android:width="35dp" android:height="35dp"/>
        </shape>
    </item>
</layer-list>